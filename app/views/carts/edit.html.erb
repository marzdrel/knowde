<main class="content">
  <div class="container p-0">
    <div class="row">
      <div class="col-12">
        <div class="card">
          <div class="card-body">

            <div class="row">
              <div class="col-md-4 pb-2">
                <%= link_to cart_path(@action.cart), class: "btn btn-primary" do %>
                  Exit
                <% end %>
              </div>

              <div class="col-md-8 text-right">
                <div class="<%= @action.message_klass %> btn w-100 monospace text-right" >
                  <%= @action.message %>
                </div>
              </div>
            </div>

            <hr>

            <div class="row">
              <div class="col-sm-12">
                <%= form_with model: @action.cart, data: { turbo: false } do |f| %>
                  <div class="mb-3">
                    <%= f.label :code, class: "form-label" do %> Enter barcode <% end %>
                    <%= f.text_field :code, class: "form-control", placeholder: "Type barcode (100-199 are valid codes)", autofocus: true %>
                  </div>

                  <div class="mt-3">
                    <button type="submit" class="btn btn-primary">Scan</button>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>