<main class="content">
  <div class="container p-0">
    <div class="row">
      <div class="col-12">
        <div class="card">
          <div class="card-body">

            <div class="row">
              <div class="col-md-4 pb-2">
                <%= link_to carts_path, class: "btn btn-primary" do %>
                  Next Customer
                <% end %>
              </div>

              <div class="col-md-8 text-right">
                <div class="<%= @action.message_klass %> btn w-100 monospace text-right" >
                  <%= @action.message %>
                </div>
              </div>
            </div>

            <hr>

            <% if @action.products.any? %>

            <table id="datatables-responsive" class="table table-striped table-sm" style="width:100%" data-turbo="true">
              <thead>
                <tr>
                  <th>Product</th>
                  <th class="text-right">Code</th>
                  <th class="text-right">Qty</th>
                  <th class="text-right">Price</th>
                  <th class="text-right">Total</th>
                </tr>
              </thead>

              <tbody>
                <% @action.products.each do |product| %>
                  <tr>
                    <td> <%= product.name %> </td>
                    <td class="numeric"> <%= product.code %> </td>
                    <td class="numeric"> <%= product.qty %> </td>
                    <td class="cash"> <%= product.pretty_price %> </td>
                    <td class="cash"> <%= product.pretty_total %> </td>
                  </tr>
                <% end %>
              </tbody>
            </table>

            <% else %>

            <div class="alert alert-danger" role="alert">
              <div class="alert-message">
                <strong>Warning!</strong> No products scanned.
              </div>
            </div>

            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>