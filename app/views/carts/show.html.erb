<main class="content">
  <div class="container-fluid p-0">
    <div class="row">
      <div class="col-12">
        <div class="card">
          <div class="card-body">

            <div class="row">
              <div class="col-sm-12 text-right">
                <%= link_to root_path, class: "btn btn-primary" do %>
                  Exit
                <% end %>
              </div>
            </div>

            <hr>

            <div class="row">
              <div class="col-sm-12">
                <%= form_with model: @action.cart do |f| %>
                  <div class="mb-3">
                    <%= f.label :keywords, class: "form-label" do %> Enter barcode <% end %>
                    <%= f.text_field :keywords, class: "form-control", placeholder: "Type barcode, ex: 123", autofocus: true %>
                  </div>

                  <div class="mt-3">
                    <button type="submit" class="btn btn-primary">Scan</button>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>